<h3>Create Account</h3>

<%= form_for(@user) do |f| %>
  <%= f.label :name, "Username" %>
  <%= f.text_field :name %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create Account" %>
<% end %>

<% if flash[:error] %>
  <% flash[:error].each do |n| %>
    <p><%= n %></p>
  <% end %>
<% end %>